{
  "manifest_version": 3,
  "name": "React Chat Extension",
  "version": "1.0.0",
  "description": "A chat application Chrome extension",
  "action": {
    "default_icon": {
      "16": "icon.png"
    }
  },
  "permissions": ["storage", "tabs", "sidePanel", "windows"],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
